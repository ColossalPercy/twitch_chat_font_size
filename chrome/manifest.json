{
  "content_scripts": [
    {
      "js": [
        "inject.js"
      ],
      "matches": [
        "*://*.twitch.tv/*"
      ]
    }
  ],
  "description": "Use the plus and minus to change the font size in twitch chat.",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "manifest_version": 2,
  "name": "Twitch Chat Font Size",
  "permissions": [
    "*://*.twitch.tv/*",
    "*://*.rawgit.com/*"
  ],
  "version": "3.0.1"
}
